
    {% extends "@EBMSocialNetwork/bundleLayout.html.twig" %}

{# Titre de l'onglet #}
{% block title %}
    Réseau Social - Ajouter une publication
{% endblock %}

{# CSS propres à cette page #}
{% block stylesheets %}

{% endblock %}


{# Contenu de la page #}
{% block body %}

    <a href="http://localhost/filrouge/fil-rouge/web/app_dev.php/social/add">Ajouter une publication</a>

    {% block content_body %}

        <div class="page-profile">
            <div class="page-content">
                <ul>

                        <div class="panel">
                            <div class="panel-head">
                                <h3 class="panel-title">Ajouter publication par : {{ app.user.username }}</h3>
                            </div>
                            <div class="panel-body">

                                <div id="body_task">

                                    {{ include("EBMSocialNetworkBundle:Publication:form.html.twig") }}

                                    <p>
                                        Attention : cette annonce sera ajoutée directement
                                        sur la page d'accueil après validation du formulaire.
                                    </p>

                                </div>
                            </div>
                        </div>
                </ul>
            </div>
        </div>

    {% endblock %}


    {# Scripts propres à cette page #}
    {% block scripts %}

    {% endblock %}


{% endblock %}
