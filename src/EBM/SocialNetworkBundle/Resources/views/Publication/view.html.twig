{% extends "@EBMSocialNetwork/bundleLayout.html.twig" %}

{# Titre de l'onglet #}
{% block title %}
    Réseau Social
{% endblock %}

{# CSS propres à cette page #}
{% block stylesheets %}

{% endblock %}

{% block body %}

    <div class="page-header" style="margin-top:-30px; margin-bottom:-25px;">
        <h1 class="page-title">Social Network</h1>
        <ol class="breadcrumb">
            <li>Home</li>
            <li class="active">Actualités</li>
        </ol>
        <div class="page-header-actions">
            <a href="{{ path('ebm_social_network_add') }}">
                <button type="button" class="btn btn-sm btn-icon btn-inverse btn-round" data-toggle="tooltip"
                        data-original-title="Ajouter une publication">
                    <i class="icon md-edit" aria-hidden="true"></i>
                </button>
            </a>
            <a href="{{ path('ebm_social_network_homepage') }}">
                <button type="button" class="btn btn-sm btn-icon btn-inverse btn-round" data-toggle="tooltip"
                        data-original-title="Rafraichir">
                    <i class="icon md-refresh" aria-hidden="true"></i>
                </button>
            </a>
            <a href="{{ path('ebm_social_network_subscriptions') }}">
                <button type="button" class="btn btn-sm btn-icon btn-inverse btn-round" data-toggle="tooltip"
                        data-original-title="Abonnements">
                    <i class="icon md-settings" aria-hidden="true"></i>
                </button>
            </a>
        </div>
    </div>

    {# Contenu de la page #}
{% block content_body %}
    <div class="page-profile">
        <div class="page-content">
            <div class="panel">
                <div class="panel-head">
                    <h3 class="panel-title"> {{ publication.userPublication.username }}
                        <span>a posté</span>
                        <small class="margin-bottom-20 grey-500">{{ publication.date|date("m/d/Y") }}</small>
                        <div id="body_task">
                            <h5>{{  publication.content }}</h5>

                        </div>
                    </h3>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        {% for comment in comments %}
                                <li class="list-group-item">
                                    <div class="media">
                                        <div class="media-left">
                                                <img class="img-responsive" src="{{ asset("bundles/coreiconbar/images/avatar5.png") }}"
                                                     alt="profile picture">
                                            </a>
                                        </div>
                                        <div class="media-body">
                                            <h4 class="media-heading"> {{ comment.userComment.username }}
                                                <span>a commenté</span>
                                                <span class="" data-target="" data-toggle="modal" type="button">
                                                    <i class="icon md-edit" aria-hidden="true"></i>
                                                </span>
                                            </h4>
                                            <div class="profile-brief">{{ comment.content }}</div>
                                        </div>
                                    </div>
                                </li>
                        {% endfor %}
                    </ul>
                    </div>
                    <div id="body_comment">
                        {{ include("EBMSocialNetworkBundle:Comment:add.html.twig") }}
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
{# Scripts propres à cette page #}
{% block scripts %}
{% endblock %}
{% endblock %}