{% extends "EBMKMBundle::bundleLayout.html.twig" %}
{% block content_body %}


    <div class="page-header">
        <h1 class="page-title">
            Liste des documents
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('core_dashboard_homepage') }}">Accueil</a></li>
            <li><a href="{{ path('ebmkm_homepage') }}">Ressources</a></li>
            <li>Documents</li>
        </ol>

        <div class="page-header-actions">
            <a type="button"
               class="btn btn-sm btn-icon btn-inverse btn-round waves-effect waves-classic waves-round"
               href="{{ path('ebmkm_document_create') }}">
                <i class="icon md-plus" aria-hidden="true"></i>
            </a>
        </div>
    </div>


    <div class="page-content">

        <table class="table">
            <tr>
                <th>Nom du document</th>
                <th>Date de l'upload</th>
                <th>Cr√©ateur</th>
            </tr>
            {% for document in documents %}
                <tr>
                    <td><a href="{{ path('ebmkm_document_detail', { id: document.id }) }}">{{ document.name }}</a></td>
                    <td>{{ document.date | date('d-M-Y H:i:s') }}</td>
                    <td>{{ document.history.author.username }}</td>
                </tr>
            {% endfor %}
        </table>

    </div>

    {% endblock %}
