
{% extends "@EBMGDP/bundleLayout.html.twig" %}

{# Titre de l'onglet #}
{% block title %}
    Selection de la machine
{% endblock %}

{# CSS propres à cette page #}
{% block stylesheets %}

{% endblock %}


{# Contenu de la page #}

{% block content_body %}
    <select nom="liste machines">
        {% for machine in machines %}
        <option>{{ machine.id }} {{ machine.dateAchat }}- {{ machine.nom }}</option>
        {% endfor %}
    </select>


    {% for machine in machines %}
        <a class="btn btn-block btn-round btn-lg btn-primary margin-top-20 margin-bottom-20" href="{{ path('ebm_materiel_machines_planning', {'machine': machine.nom })}}">{{ machine.nom }}</a>
    {% endfor %}
{% endblock %}


