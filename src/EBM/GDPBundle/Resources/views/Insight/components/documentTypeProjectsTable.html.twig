<div class="panel" id="projects">
    <div class="panel-heading">
        <h3 class="panel-title">Types de livrables existants</h3>
    </div>
    {% if listDocumentTypeProjects|default({})|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <td>Id</td>
                    <td>Nom</td>
                    <td>Date de modification</td>
                    <td>Nombre de livrables existants</td>
                    <td>Actions</td>
                </tr>
                </thead>
                <tbody>
                {% for documentTypeProject in listDocumentTypeProjects %}
                    <tr>
                        <td>{{ documentTypeProject.id }}</td>
                        <td>{{ documentTypeProject.name|upper }}</td>
                        <td>{{ documentTypeProject.modificationDate|date('Y-m-d') }}
                        </td>
                        <td>
                            {{ documentTypeProject.documentProjects|length }}
                        </td>
                        <td>
                            <a href="{{ path('ebmgdp_insight_documenttypeproject_view', { 'id': documentTypeProject.id }) }}"><i class="icon md-eye" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="panel-body">
            <p class="text-center">Aucun types livrable n'a encore été défini. Rendez-vous sur l'onglet "Gestion type livrables" pour en créer un.</p>
        </div>
    {% endif %}
</div>