<div class="panel" id="projects">
    <div class="panel-heading">
        <h3 class="panel-title">Projects</h3>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <td>Projects</td>
                <td>Nombre de tâches</td>
                <td>Dernière mise à jour</td>
                <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            <tr>
                {% if listProjects is not null %}
                {% for project in listProjects %}
                    <td>{{ project.name }}</td>
                    <td>
                        {{ project.tasks|length }}
                    </td>
                    <td>{{ project.lastUpdate|date('Y-m-d') }}</td>
                    <td>
                        <button type="button" class="btn btn-sm btn-icon btn-pure btn-default waves-effect waves-classic" data-toggle="tooltip" data-original-title="Edit">
                            <a href="{{ path('ebmgdp_projecttasks',{'code': project.code})}}"><i class="icon md-eye" aria-hidden="true"></i></a>
                        </button>
                    </td>

                {% endfor %}
                {% endif %}

            </tr>
            </tbody>
        </table>
    </div>
</div>