{% block content_body %}

<div class="panel panel-bordered panel-primary">
    {# Header : titre + barre de recherche sur le tableau #}
    <div class="panel-heading">
        <h3 class="panel-title">Nom du type de livrable | {{ documentTypeProject.name }}</h3>
        <div class="panel-actions" id="tasks-action">&nbsp;
            <a href="{{ path('ebmgdp_insight_documenttypeproject_edit', { 'id': documentTypeProject.id }) }}" class="btn btn-round btn-warning waves-effect waves-round">Editer le type</a>
