        </div>
    </div>

    <table id="documentTypeProjectsTableShow" class="table table-hover dataTable table-striped width-full" data-plugin="dataTable">
        <tbody>
            <tr>
                <th style="font-weight:bold;">Id</th>
                <td>{{ documentTypeProject.id }}</td>
            </tr>
            <tr>
                <th style="font-weight:bold;">Nom</th>
                <td>{{ documentTypeProject.name }}</td>
            </tr>
            <tr>
                <th style="font-weight:bold;">Date de création</th>
                <td>{% if documentTypeProject.creationDate %}{{ documentTypeProject.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th style="font-weight:bold;">Date de modification</th>
                <td>{% if documentTypeProject.modificationDate %}{{ documentTypeProject.modificationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

</div>
