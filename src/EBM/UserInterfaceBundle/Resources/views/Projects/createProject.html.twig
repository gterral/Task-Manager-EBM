{# src/CPCreatorBundle/Resources/views/Default/overview.html.twig #}

{% extends "@CoreDashboard/bundleLayout.html.twig" %}

{# Titre de l'onglet #}
{% block title %}
    Création de projet
{% endblock %}

{# CSS propres à cette page #}
{% block stylesheets %}

{% endblock %}


{# Contenu de la page #}

{% block content_body %}
    <div class="panel panel-bordered">
        <div class="panel-heading">
            <h1 class="panel-title">Création d'un projet</h1>
        </div>
        <div class="panel-body">
            <div class="formulaire">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {{ form_errors(form) }}
            </div>

            <div class="form-group">
                {{ form_label(form.name, "Nom du projet", {'label_attr': {'class': 'col-sm-2 control-label' }}) }}
                {{ form_errors(form.name) }}

                <div class="col-sm-10">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {# projectType : à modifier - selon l'API user_management, il s'agit d'un objet #}
                {{ form_label(form.projectType, "Type", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.projectType) }}
                <div class="col-sm-10">
                    {{ form_widget(form.projectType, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.code, "Code projet", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.code) }}

                <div class="col-sm-10">
                    {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description, "Description", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.description) }}

                <div class="col-sm-10">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

            {# Génération automatique des champs pas encore écrits.
               Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
               et tous les champs cachés (type « hidden »). #}
            {{ form_rest(form) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


{# Scripts propres à cette page #}
{% block scripts %}


{% endblock %}