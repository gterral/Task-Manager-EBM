{# src/CPCreatorBundle/Resources/views/Default/overview.html.twig #}

{% extends "@CoreDashboard/bundleLayout.html.twig" %}

{# Titre de l'onglet #}
{% block title %}
    Homepage
{% endblock %}

{# CSS propres à cette page #}
{% block stylesheets %}

{% endblock %}


{# Contenu de la page #}

{% block content_body %}
    <div class="panel panel-bordered">
        <div class="panel-heading">
            <div class="panel-actions">
                <div class="input-search input-group-sm">
                    <button id="search_user" class="input-search-btn" type="submit">
                        <i class="icon md-search" aria-hidden="true"></i>
                    </button>
                    <input type="text" class="form-control" name="search_bar" placeholder="Cherchez un utilisateur...">
                </div>
            </div>

            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% set nameToDisplay = app.user.username %}
                {% if app.user.fullname is defined and app.user.fullname|length > 0 %}
                    {% set nameToDisplay = app.user.fullname %}
                {% endif %}

                <h1 class="panel-title">Bienvenue, {{ nameToDisplay }} !</h1>

             {% else %}

                <h1 class="panel-title">Bienvenue !</h1>

            {% endif %}
        </div>
        <ul class="list-group list-group-bordered">
            <a class="list-group-item waves-effect waves-block waves-classic" href="{{ path('core_user_view_own_profile') }}">Voir mon profil</a>
            <a class="list-group-item waves-effect waves-block waves-classic" href="#">Modifier mon profil</a>
            <a class="list-group-item waves-effect waves-block waves-classic" href="#">Rechercher un profil</a>
            <a class="list-group-item waves-effect waves-block waves-classic" href="{{ path('ebm_user_project_creation') }}">Créer un projet</a>
            <a class="list-group-item waves-effect waves-block waves-classic" href="#">Rechercher un projet</a>
            <a class="list-group-item waves-effect waves-block waves-classic" href="#">Voir mes projets</a>
        </ul>
    </div>
{% endblock %}


{# Scripts propres à cette page #}
{% block scripts %}


{% endblock %}