{# src/CPCreatorBundle/Resources/views/Default/overview.html.twig #}

{% extends "@CoreDashboard/bundleLayout.html.twig" %}

{# Titre de l'onglet #}
{% block title %}
    Mon profil
{% endblock %}

{# CSS propres à cette page #}
{% block stylesheets %}

{% endblock %}


{# Contenu de la page #}

{% block content_body %}
    <div class="panel panel-bordered">
        <div class="panel-heading">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% set nameToDisplay = app.user.name %}
                {% if app.user.name is defined and app.user.name|length > 0 and
                app.user.surname is defined and app.user.surname|length > 0 %}
                    {% set nameToDisplay = app.user.name %}
                    {% set surnameToDisplay = app.user.surname %}

                    <h1 class="panel-title">{{ nameToDisplay }} {{ surnameToDisplay }}</h1>
                {% else %}
                    <h1 class="panel-title">Mon profil</h1>
                {% endif %}
            {% else %}
                <h1 class="panel-title">Mon profil</h1>
            {% endif %}
        </div>
        <div class="panel-body">
            <div class="row">
                <div id="infos" class="col-sm-6">
                    <h2 class="example-title">Informations personnelles</h2>

                    <ul class="list-group list-group-full">
                        {# Promotion #}
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {% set promotionDisplay = app.user.promotion %}

                            <li class="list-group-item">Promotion : {{ promotionDisplay }}</li>
                        {% endif %}

                        {# Adresse email #}
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {% set emailDisplay = app.user.email %}

                            <li class="list-group-item">Adresse e-mail : {{ emailDisplay }}</li>
                        {% endif %}

                    </ul>

                </div>
                <div id="projets" class="col-sm-6">
                    <h2 class="example-title">Mes projets</h2>
                </div>
            </div>

            <div class="row">
                <div id="description" class="col-sm-6">
                    <h2 class="example-title">Description</h2>

                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        {% set descriptionDisplay = app.user.desc %}

                        <p>{{ descriptionDisplay }}</p>
                    {% endif %}
                </div>

                <div id="competences" class="col-sm-6">
                    <h2 class="example-title">Mes compétences</h2>
                </div>
            </div>
        </div>

    </div>
{% endblock %}


{# Scripts propres à cette page #}
{% block scripts %}


{% endblock %}