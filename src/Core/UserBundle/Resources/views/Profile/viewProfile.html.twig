{# src/CPCreatorBundle/Resources/views/Default/overview.html.twig #}

{% extends "@CoreDashboard/bundleLayout.html.twig" %}

{# Titre de l'onglet #}
{% block title %}
    Mon profil
{% endblock %}

{# CSS propres à cette page #}
{% block stylesheets %}

{% endblock %}


{# Contenu de la page #}

{% block content_body %}
    <div class="panel panel-bordered">
        <div class="panel-heading">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% set nameToDisplay = app.user.name %}
                {% if app.user.name is defined and app.user.name|length > 0 and
                app.user.surname is defined and app.user.surname|length > 0 %}
                    {% set nameToDisplay = app.user.name %}
                    {% set surnameToDisplay = app.user.surname %}

                    <h1 class="panel-title">{{ nameToDisplay }} {{ surnameToDisplay }}</h1>
                {% else %}
                    <h1 class="panel-title">Mon profil</h1>
                {% endif %}
            {% else %}
                <h1 class="panel-title">Mon profil</h1>
            {% endif %}
        </div>
        <div class="panel-body">
            <div id="infos"></div>
            <div id="description"></div>
            <div id="projets"></div>
            <div id="competences"></div>
        </div>

    </div>
{% endblock %}


{# Scripts propres à cette page #}
{% block scripts %}


{% endblock %}