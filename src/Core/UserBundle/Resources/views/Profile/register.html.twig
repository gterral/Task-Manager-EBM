{# src/CPCreatorBundle/Resources/views/Default/overview.html.twig #}

{% extends "@CoreDashboard/bundleLayout.html.twig" %}

{# Titre de l'onglet #}
{% block title %}
    Registration
{% endblock %}

{# CSS propres à cette page #}
{% block stylesheets %}

{% endblock %}


{# Contenu de la page #}

{% block content_body %}
    <div class="panel panel-bordered">
        <div class="panel-heading">
            <h1 class="panel-title">Inscription sur la plateforme</h1>
        </div>
        <div class="panel-body">
            <div class="formulaire">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {{ form_errors(form) }}
            </div>

            <div class="form-group">
                {{ form_label(form.name, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.name) }}

                <div class="col-sm-10">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {# Idem pour un autre champ. #}
            <div class="form-group">
                {{ form_label(form.surname, "Prénom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.surname) }}
                <div class="col-sm-10">
                    {{ form_widget(form.surname, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.email) }}

                <div class="col-sm-10">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.promotion, "Promotion", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.promotion) }}

                <div class="col-sm-10">
                    {{ form_widget(form.promotion, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.desc, "Description", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.desc) }}

                <div class="col-sm-10">
                    {{ form_widget(form.desc, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

            {# Génération automatique des champs pas encore écrits.
               Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
               et tous les champs cachés (type « hidden »). #}
            {{ form_rest(form) }}

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}


{# Scripts propres à cette page #}
{% block scripts %}


{% endblock %}